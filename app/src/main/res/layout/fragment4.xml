<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment4">


    <LinearLayout
        android:id="@+id/layout1"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="109dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/selef_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/red"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/revise_mima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:background="@drawable/button_fragment4"
                android:gravity="center"
                android:text=" 修 改 密 码 "
                android:textColor="@android:color/holo_red_light"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/button_revise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:background="@drawable/button_fragment4"
            android:gravity="center"
            android:text=" 编辑"
            android:textColor="@android:color/holo_red_light"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="@android:color/white"
        android:text="  手机号："
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <EditText
        android:id="@+id/selef_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:enabled="false"
        android:textSize="20dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textSize="20dp"
        android:text="   密码："
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
        <EditText
            android:id="@+id/selef_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:enabled="false"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textSize="20dp"
        android:text="   邮箱："
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"

        />
    <EditText
        android:id="@+id/selef_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:enabled="false"
        android:background="@android:color/white"
        android:textSize="20dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    <Button
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:textSize="20dp"
        android:text="切换用户"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    <Button
        android:id="@+id/refuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/loworange"
        android:textSize="20dp"
        android:text="注销登录"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginBottom="120dp"/>
</LinearLayout>